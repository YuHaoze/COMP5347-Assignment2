extends ../../layouts/layout

block content
  .tab-content
    #tab-content-0.tab-pane.tabs-animation.fade.show.active(role='tabpanel')
      .row.justify-content-center
        .col-md-6
          .main-card.mb-3.card
            .card-body
              h5.card-title Reset Password
              form#reset-form(action='/reset' method='POST')
                .position-relative.form-group
                  label(for='password') Please type your new password!

                  input#password.form-control(name='password' placeholder='Password' type='password')
                .position-relative.form-group
                  label(for='password-confirm') Confirm Password
                  input#password-confirm.form-control(name='password_confirm' placeholder='Confirm Password' type='password')

                button.mt-1.btn.btn-primary Submit
                small.form-text.text-muted
                  | Already had an account?
                  a(href='/login') Log In

block javascripts-foot

  script(src="/javascripts/auth.js")

